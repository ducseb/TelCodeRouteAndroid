<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/layoutMain"
    android:theme="@android:style/Theme.NoTitleBar"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="@drawable/Fond2">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1"
        android:layout_centerHorizontal="true">
        <TextView
            android:text="1/40"
            android:layout_width="320dp"
            android:layout_height="80dp"
            android:id="@+id/question_tvQuestion"
            android:textColor="#464646"
            android:background="@drawable/QUESTION_Header"
            android:layout_marginTop="10dp"
            android:textSize="35sp"
            android:visibility="visible"
            android:layout_centerVertical="false"
            android:layout_centerHorizontal="false"
            android:gravity="center|right"
            android:paddingRight="10dp" />
    </RelativeLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1"
        android:layout_gravity="center_vertical|center_horizontal|center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal|center"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayoutC1"
            android:layout_weight="1">
            <ToggleButton
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/question_toggleA"
                android:text="A"
                android:textOff="A"
                android:textOn="A"
                android:width="300dp"
                android:background="@drawable/bt_choixReponse"
                android:checked="false"
				android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:textSize="22sp" />
            <ToggleButton
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/question_toggleB"
                android:text="B"
                android:textOff="B"
                android:textOn="B"
                android:textSize="22sp"
                android:width="300dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bt_choixReponse"
                android:checked="false" />
            <ToggleButton
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/question_toggleC"
                android:text="C"
                android:textOff="C"
                android:textOn="C"
                android:textSize="22sp"
                android:width="300dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bt_choixReponse"
                android:checked="false" />
            <ToggleButton
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:id="@+id/question_toggleD"
                android:textOff="D"
                android:textOn="D"
                android:textSize="22sp"
                android:width="300dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bt_choixReponse"
                android:checked="false" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:tag="444"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout3"
            android:layout_alignParentRight="true">
            <ImageButton
                android:src="@drawable/bt_qsuivante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/question_btSuivant"
                android:background="@android:color/transparent" />
        </RelativeLayout>
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout4"
            android:layout_alignParentLeft="true">
            <ImageButton
                android:src="@drawable/bt_quitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/question_btQuitter"
                android:background="@android:color/transparent" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>