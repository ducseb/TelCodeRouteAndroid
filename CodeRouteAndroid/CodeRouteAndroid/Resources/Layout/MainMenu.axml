<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/layoutMain"
    android:background="@drawable/Fond2"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
    <ImageView
        android:src="@drawable/TELCODEROUTE_Titre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imgTitre"
        android:layout_centerHorizontal="true" />
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal|center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutBt"
            android:paddingTop="20dp">
            <ImageButton
                android:src="@drawable/bt_Commencer"
                android:id="@+id/btCommencer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@android:color/transparent" />
            <ImageButton
                android:src="@drawable/bt_Histo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btHisto"
                android:background="@android:color/transparent" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <TextView
            android:text="sdfsdfsdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MainMenu_Session"
            android:textSize="20dp"
            android:textColor="@android:color/background_light"
            android:paddingTop="20dp" />
    </RelativeLayout>
</RelativeLayout>