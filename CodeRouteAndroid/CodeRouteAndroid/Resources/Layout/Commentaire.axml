<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/layoutMain"
    android:theme="@android:style/Theme.NoTitleBar"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="@drawable/Fond2">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layoutBt"
        android:paddingTop="20dp">
        <TextView
            android:text="Nombre de faute(s) :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commentaire_lblFautes" />
        <EditText
            android:inputType="number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commentaire_txtFautes" />
        <TextView
            android:text="Commentaire"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commentaire_lblCommentaire"
            android:layout_marginTop="20dp" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commentaires_txtCommentaires"
            android:height="200dp"
            android:gravity="top" />
    </LinearLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:tag="444"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <ImageButton
                android:src="@drawable/bt_valid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commentaire_suivant"
                android:background="@android:color/transparent" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>